package  {		import flash.display.MovieClip;	import flash.events.*;		public class sun extends MovieClip {				public var DC; 		public var angle;		public var speed;		public var radius;		public var oldY:Number=0;		public var yDiff:Number;				public function sun(DC) {						this.angle = 3;			this.speed = 5;			this.radius = 500;			this.DC = DC;			this.x = 0; 			this.y = 0;			this.addEventListener(Event.ENTER_FRAME, move);			// constructor code		}				public function move(e :Event) :void {			 yDiff = oldY - this.y;			 //trace(yDiff);			 oldY = this.y;			 var rad :Number = this.angle * (Math.PI / 180);			 this.x = 640 + this.radius * Math.cos(rad);			 this.y = 500 + this.radius * Math.sin(rad);			 this.angle += this.speed;			 if (this.y < 200) {				 if (yDiff < 0 ){					 this.DC.nightly.updateNight(-1);				 }				 if (yDiff > 0 ){					 this.DC.nightly.updateNight(1);				 }				 			 };			 			 						}	}}