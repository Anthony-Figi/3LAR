package  {		import flash.display.MovieClip;			public class night extends MovieClip {				public var DC; 		public var stars:Boolean;		public var starArray:Array = new Array();				public function night(DC, starBool) {			this.stars = starBool			this.DC = DC; 			this.alpha = 0.4; 			this.y = -50;			if(this.stars == true) {				this.alpha = 0.9;				for (var i:Number=0; i<200; i++) {				var starry = new star();				starArray.push(starry);				};								for (var t:Number=0; t<starArray.length;t++){				this.addChild(starArray[t]); 				};			}		}				public function updateNight(sunY) {						if(this.stars == true) {				if(this.alpha > 0 && this.alpha < 1){					this.alpha += sunY/50;					//trace(this.alpha);				}				else if(this.alpha <= 0 && sunY > 0) {					this.alpha += sunY/50;				}				else if(this.alpha >= 1 && sunY < 0) {					this.alpha += sunY/50;				}			}			else {				if(this.alpha > 0 && this.alpha < 0.6){					this.alpha += sunY/20;										}				else if(this.alpha <= 0 && sunY > 0) {					this.alpha += sunY/20;				}				else if(this.alpha >= 0.6 && sunY < 0) {					this.alpha += sunY/20;				}			}					}	}	}