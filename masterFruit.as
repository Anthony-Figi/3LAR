package  {		import flash.display.MovieClip;	import flash.text.*;			public class masterFruit extends MovieClip {				public var fruitType;				public function masterFruit(tweet, xPos, yPos, zRot, fruitTag) { 			//this.scaleX = 0.3; 			//this.scaleY = 0.3;						this.fruitType = fruitTag;			this.x = xPos;			this.y = yPos;			this.rotationZ = 0;			var myFormat:TextFormat = new TextFormat();			var myText:TextField = new TextField();			if(this.fruitType == "redApple"){				var fruit = new redApple(); 				addChild(fruit);				myText.width = 90;			 	myText.height = 75;			 	myFormat.color = 0xFFFFFF;				myText.y = -25-30-5;			 	myText.x = -40;				verticalAlignTextField(myText);			}			else if(this.fruitType == "apricot"){				var fruitApricot = new apricot(); 				addChild(fruitApricot);				myText.width = 90;			 	myText.height = 75;			 	myFormat.color = 0x000000;				myText.y = -45-30-5;				myText.x = -45;				verticalAlignTextField(myText);			}			else if(this.fruitType == "greenApple"){				var fruitGreenApple = new greenApple(); 				addChild(fruitGreenApple);				myText.width = 90;			 	myText.height = 75;			 	myFormat.color = 0x000000;				myText.y = -35-30;			 	myText.x = -45;				verticalAlignTextField(myText);			}			else if(this.fruitType == "grapefruit"){				var fruitGrapeFruit = new grapefruit(); 				addChild(fruitGrapeFruit);				myText.width = 90;			 	myText.height = 75;				myText.y = -35-30;			 	myText.x = -47;			 	myFormat.color = 0x000000;				verticalAlignTextField(myText);			}			else if(this.fruitType == "banana"){				var fruitBanana = new banana(); 				addChild(fruitBanana);				myText.width = 145;			 	myText.height = 50;				myText.y = -15-30+5;			 	myText.x = -75;			 	myFormat.color = 0x000000;				verticalAlignTextField(myText);			}			else if(this.fruitType == "lemon"){				var fruitLemon = new lemon(); 				addChild(fruitLemon);				myText.width = 90;			 	myText.height = 75;			 	myFormat.color = 0x000000;				myText.y = -35-30;			 	myText.x = -42;				verticalAlignTextField(myText);			}			else if(this.fruitType == "mango"){				var fruitMango = new mango(); 				addChild(fruitMango);				myText.width = 90;			 	myText.height = 75;			 	myFormat.color = 0x000000;				myText.y = -35-30;			 	myText.x = -40-5;				verticalAlignTextField(myText);			}			else if(this.fruitType == "orange"){				var fruitOrange = new orange(); 				addChild(fruitOrange);				myText.width = 90;			 	myText.height = 75;			 	myFormat.color = 0x000000;				myText.y = -25-30-5;			 	myText.x = -45;				verticalAlignTextField(myText);			}			else if(this.fruitType == "redPear"){				var fruitRedPear = new redPear(); 				addChild(fruitRedPear);				myText.width = 90;			 	myText.height = 75;			 	myFormat.color = 0x000000;				myText.y = -20-30-5;			 	myText.x = -43;				verticalAlignTextField(myText);			}			else if(this.fruitType == "yellowPear"){				var fruitYellowPear = new yellowPear(); 				addChild(fruitYellowPear);				myText.width = 90;			 	myText.height = 75;			 	myFormat.color = 0x000000;				myText.y = -20-30-5;			 	myText.x = -40;				verticalAlignTextField(myText);			}			//var calibri = new Calibri();			var leafFont = new Krungthep();			 myFormat.size = 8;			 myFormat.align = TextFormatAlign.CENTER;			 myFormat.font = leafFont.fontName;			 			 myText.defaultTextFormat = myFormat;			 //myText.embedFonts = true;			 myText.antiAliasType = AntiAliasType.ADVANCED;			 myText.text = tweet;			 myText.wordWrap = true;			 this.addChild(myText);		}				public static function verticalAlignTextField(Texter: TextField): void {    		Texter.y += Math.round((Texter.height - Texter.textHeight) / 2);		}			}	}