package  {		import flash.display.MovieClip;	import flash.events.*;	import flash.events.Event;	import flash.utils.getTimer;	import flash.utils.Timer;	import flash.events.TimerEvent;		public class jengaGame extends MovieClip {				public var DC; 		public var touchDelay:Boolean = false;		public var touchTimer = new Timer(4000, 1);		public var waitTimer = new Timer(500, 1);		public var waiter:Number = 0;				public function jengaGame(DC) {				this.DC = DC;				this.x = -900; 				this.y = 200;				this.scaleX = 0.45;				this.scaleY = 0.45;				this.alpha = 1; 				this.rotationZ = 0;								this.stop();				this.addEventListener(Event.ENTER_FRAME, touched);				touchTimer.addEventListener(TimerEvent.TIMER, delayManager);				waitTimer.addEventListener(TimerEvent.TIMER, waitManager);		}				public function touched (event: Event) : void{			if(this.DC.userOne != null){				for each(var user in this.DC.device.users) {					if(this.DC.gameOn != true){						var userOneLeftHand = this.DC.leftSprites[user.userID]						var userOneRightHand = this.DC.rightSprites[user.userID]						if(this.hitTestObject(userOneLeftHand) || this.hitTestObject(userOneRightHand) ){							if(waiter == 0){								waiter = 1;								waitTimer.start();								this.removeEventListener(Event.ENTER_FRAME, touched);							}							else if (touchDelay != true && waiter == 2){								touchDelay = true;								this.play();								this.removeEventListener(Event.ENTER_FRAME, touched);								this.addEventListener(Event.ENTER_FRAME, stopper);							}							else {								////trace ("NOT YET", waiter);							}						}					}				}			}		}				public function waitManager(event: Event) {			////trace("waiting"); 			waiter = 2; 			this.addEventListener(Event.ENTER_FRAME, touched);		}				public function delayManager(event: Event){			////trace("delay on"); 			touchDelay = false; 			waiter = 0; 			this.addEventListener(Event.ENTER_FRAME, touched);		}				public function stopper (event: Event) {			if(this.currentFrame == 1) {				this.stop();				touchTimer.start();				this.removeEventListener(Event.ENTER_FRAME, stopper);			}		}	}	}