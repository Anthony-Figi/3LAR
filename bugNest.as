package  {		import flash.display.MovieClip;	import flash.events.*;	import flash.events.Event;	import flash.utils.getTimer;	import flash.utils.Timer;	import flash.events.TimerEvent;			public class bugNest extends MovieClip {				public var DC;		public var nestScore:Number = 0;		public var nestDelay:Boolean = false;		public var nestTimer = new Timer(3000, 1);				public function bugNest(DC) {			this.DC = DC;			this.stop();			this.x = -500;			this.y = 0;			this.scaleX = 0.2;			this.scaleY = 0.2;			//this.addEventListener(Event.ENTER_FRAME, touchNest);			//nestTimer.addEventListener(TimerEvent.TIMER, function() {trace("delay on"), nestDelay = false;}); 		}								public function touchNest (event: Event){			if(this.DC.userOne != null && this.DC.gameOn != true){				var userOneLeftHand = this.DC.leftSprites[this.DC.userOne.userID]				var userOneRightHand = this.DC.rightSprites[this.DC.userOne.userID]				if(this.hitTestObject(userOneLeftHand) || this.hitTestObject(userOneRightHand) ){					trace("NEST HIT");					if (nestDelay != true){						nestDelay = true;						nestTimer.start();						this.play();						this.addEventListener(Event.ENTER_FRAME, stopper);						nestScore += 1;						if(nestScore > 2){							this.DC.gameOn = true;							//this.DC.soundManager();							this.DC.waveOfBugs(null);							this.DC.addEventListener(Event.ENTER_FRAME, this.DC.bugGameManager);							nestScore = 0;						}					}				}			}		}				public function stopper (event: Event) {			if(this.currentFrame == 36) {				this.stop();				this.removeEventListener(Event.ENTER_FRAME, stopper);			}		}			}	}